Include "SwedishG";

[ReadSub;
   <<Examine noun>>;];

[PutUnderSub;
   move noun to location;
   "Du lägger ", (the) noun, " under ", (the) second, ".";];

[UnTieSub;
   print_ret (The) noun, " sitter inte fast i något.";];

[RingSub;
   "Du vet inte hur man ringer i ", (a) noun, ".";];


